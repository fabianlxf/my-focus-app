type Cat = { id: string; name: string; lastActiveISO?: string };

function isActiveToday(lastISO?: string, graceHours = 10) {
  if (!lastISO) return false;
  const last = new Date(lastISO).getTime();
  const now = new Date();
  const start = new Date(now.getFullYear(), now.getMonth(), now.getDate()).getTime(); // 00:00 heute
  const endGrace = start + (24 + graceHours) * 60 * 60 * 1000;
  return last >= start || now.getTime() <= endGrace;
}

export default function FlameDashboard({ categories }: { categories: Cat[] }) {
  const actives = categories.filter(c => isActiveToday(c.lastActiveISO));
  const percent = Math.round((actives.length / Math.max(1, categories.length)) * 100);

  return (
    <div className="text-white">
      {/* Master */}
      <div className="flex items-center gap-3 mb-4">
        <div className="w-12 h-12 rounded-full bg-black/40 border border-white/10 flex items-center justify-center">
          <span className="animate-pulse">ğŸ”¥</span>
        </div>
        <div className="text-lg font-semibold">{percent}% on fire</div>
      </div>

      {/* Kategorien */}
      <div className="grid grid-cols-2 gap-3">
        {categories.map(c => {
          const active = isActiveToday(c.lastActiveISO);
          return (
            <div key={c.id} className="bg-white/5 border border-white/10 rounded-xl p-3 flex items-center gap-2">
              <div className={`w-9 h-9 rounded-full flex items-center justify-center ${active ? 'bg-orange-600/30' : 'bg-black/40'}`}>
                <span>{active ? 'ğŸ”¥' : 'ğŸ•¯ï¸'}</span>
              </div>
              <div>
                <div className="font-medium">{c.name}</div>
                <div className="text-xs opacity-70">{active ? 'aktiv / Grace' : 'aus'}</div>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  );
}