import React from "react";

type Flame = {
  id: string;
  name: string;
  active: boolean;
  glowUntil?: Date;
};

export default function FlameDashboard({ flames }: { flames: Flame[] }) {
  return (
    <div className="grid grid-cols-2 gap-4">
      {flames.map((flame) => (
        <div
          key={flame.id}
          className="flex flex-col items-center justify-center p-4 rounded-lg bg-gray-800 shadow-lg"
        >
          <div
            className={`w-12 h-12 rounded-full flex items-center justify-center text-2xl ${
              flame.active ? "bg-orange-500 animate-pulse" : "bg-gray-600"
            }`}
          >
            ðŸ”¥
          </div>
          <span className="mt-2 text-sm font-medium">{flame.name}</span>
          {!flame.active && flame.glowUntil && (
            <span className="text-xs text-yellow-400 mt-1">
              glÃ¼ht bis {flame.glowUntil.toLocaleTimeString()}
            </span>
          )}
        </div>
      ))}
    </div>
  );
}